generator client {
  provider = "prisma-client-js"
}

datasource mongo {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id       String    @id @default(auto()) @map("_id") @mongo.ObjectId
  email String  @unique
  firstname  String
  lastname String
  password String
  roleId    String    @map("role_id") 
  role      Role      @relation(fields: [roleId], references: [id])

}

model Role {
  id       String    @id @default(auto()) @map("_id") @mongo.ObjectId
  name String @unique
  users     User[]    
}
